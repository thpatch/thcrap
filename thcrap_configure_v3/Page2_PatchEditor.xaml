<UserControl x:Class="thcrap_configure_v3.Page2_PatchEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:thcrap_configure_v3"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HelpTextBlock" TargetType="TextBlock">
            <Setter Property="Cursor" Value="IBeam" />
            <Setter Property="Margin" Value="3,0,0,0" />
            <Setter Property="TextDecorations">
                <Setter.Value>
                    <TextDecorationCollection>
                        <TextDecoration Location="Underline" PenThicknessUnit="FontRecommended">
                            <TextDecoration.Pen>
                                <Pen Thickness="1.5" Brush="Black">
                                    <Pen.DashStyle>
                                        <DashStyle Dashes="0,2"/>
                                    </Pen.DashStyle>
                                </Pen>
                            </TextDecoration.Pen>
                        </TextDecoration>
                    </TextDecorationCollection>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="6" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" DataContext="{Binding ElementName=ComboBoxRepos, Path=SelectedItem}">
                <StackPanel Margin="0,0,0,3" Orientation="Horizontal">
                    <TextBlock Margin="0,0,3,0">Repository:</TextBlock>
                    <ComboBox x:Name="ComboBoxRepos">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=IdOrNewText}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <!-- No load button, we load on ComboBox change -->
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,3,0">id:</TextBlock>
                    <TextBox   Grid.Row="0" Grid.Column="1" Text="{Binding Path=id, UpdateSourceTrigger=PropertyChanged}" TextChanged="RepoIdChanged" />
                    <TextBlock Grid.Row="0" Grid.Column="2" ToolTip="TODO write a description" Style="{StaticResource HelpTextBlock}">?</TextBlock>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,3,0">title:</TextBlock>
                    <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding Path=title}" />
                    <TextBlock Grid.Row="1" Grid.Column="2" ToolTip="TODO write a description" Style="{StaticResource HelpTextBlock}">?</TextBlock>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,3,0">contact:</TextBlock>
                    <TextBox   Grid.Row="2" Grid.Column="1" Text="{Binding Path=contact}" />
                    <TextBlock Grid.Row="2" Grid.Column="2" ToolTip="TODO write a description" Style="{StaticResource HelpTextBlock}">?</TextBlock>
                </Grid>
                <TextBlock Margin="0,0,0,3">servers:</TextBlock>
                <RadioButton Margin="0,0,0,3" IsChecked="{Binding servers.IsThpatchMirror}">Thpatch mirror</RadioButton>
                <RadioButton Margin="0,0,0,3" IsChecked="{Binding servers.IsGithubRepo}">Github repo:</RadioButton>
                <DockPanel Margin="20,0,0,3">
                    <TextBlock DockPanel.Dock="Left" Margin="0,0,3,0">Username:</TextBlock>
                    <TextBox Text="{Binding Path=servers.GithubUsername, UpdateSourceTrigger=PropertyChanged}" TextChanged="GithubFieldChanged" IsEnabled="{Binding servers.IsGithubInputEnabled}" />
                </DockPanel>
                <DockPanel Margin="20,0,0,3">
                    <TextBlock DockPanel.Dock="Left" Margin="0,0,3,0">Repo:</TextBlock>
                    <TextBox Text="{Binding Path=servers.GithubRepo, UpdateSourceTrigger=PropertyChanged}" TextChanged="GithubFieldChanged" IsEnabled="{Binding servers.IsGithubInputEnabled}" />
                </DockPanel>
                <RadioButton Margin="0,0,0,3" IsChecked="{Binding servers.IsOther}">Manual input:</RadioButton>
                <TextBox Margin="20,0,0,3" Text="{Binding Path=servers.Url}" IsEnabled="{Binding servers.IsManualInputEnabled}" />
                <!-- neighbors is always selected -->
                <!-- patches is autogenerated -->
                <Button Content="Save repo on your computer"/>
            </StackPanel>
            <Rectangle Grid.Row="0" Grid.Column="1" VerticalAlignment="Stretch" Width="1" Stroke="Gray" />
            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Vertical" Margin="0,0,6,0" DataContext="{Binding ElementName=ComboBoxPatches, Path=SelectedItem}">
                <StackPanel Margin="0,0,0,3" Orientation="Horizontal">
                    <TextBlock Margin="0,0,3,0">Patch:</TextBlock>
                    <ComboBox x:Name="ComboBoxPatches" ItemsSource="{Binding ElementName=ComboBoxRepos, Path=SelectedItem.patches}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=IdOrNewText}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <!-- No load button, we load on ComboBox change -->
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,3,0" Grid.RowSpan="2">id:</TextBlock>
                    <TextBox   Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Text="{Binding Path=id}" />
                    <TextBlock Grid.Row="0" Grid.Column="2" ToolTip="TODO write a description" Style="{StaticResource HelpTextBlock}">?</TextBlock>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,3,0">title:</TextBlock>
                    <TextBox   Grid.Row="1" Grid.Column="1" Text="{Binding Path=title}" />
                    <TextBlock Grid.Row="1" Grid.Column="2" ToolTip="TODO write a description" Style="{StaticResource HelpTextBlock}">?</TextBlock>
                </Grid>
                <!-- servers is autogenerated from repo server + patch name -->
                <!-- Stuff like fonts, thcrap_version_min, min_build or url_engine will require manual input,
                 make sure we keep them if they're already present in the json file. -->
                <TextBlock Margin="0,0,0,3">Dependencies:</TextBlock>
                <ItemsControl Margin="20,0,0,0" ItemsSource="{Binding Path=dependencies}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="0,0,0,3" Text="{Binding Path=.}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Margin="0,0,0,3">Copy dependencies from "All patches" tab</Button>
                <Button>Save patch on your computer</Button>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="0,20,6,0" DataContext="{Binding ElementName=ComboBoxRepos, Path=SelectedItem}">
                <DockPanel Margin="0,0,0,3">
                    <!-- TODO get from git remote.
                    Also probably shouldn't be a textbox, because we have 3 cases:
                    * Local git is initialized and has a valid remote, nothing to do, field must not be modified.
                    * Local git isn't initialized, a remote repo exists, user need to enters it (textbox can be relevant for this case, but we need some sort of "confirm" button,
                      a popup with a text field may make more sense).
                    * Local git isn't initialized, the user doesn't have a remote repo, use the Github API to create one (using some form of oauth). Requires a text input for the repo name.
                    -->
                    <TextBlock DockPanel.Dock="Left" Margin="0,0,3,0">Github URL:</TextBlock>
                    <TextBox></TextBox>
                </DockPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,3,0">Github connection status:</TextBlock>
                    <TextBlock Margin="0,0,3,0" Foreground="red">KO</TextBlock>
                    <Button>Connect</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                    <TextBlock Margin="0,0,3,0">Status:</TextBlock>
                    <Grid>
                        <StackPanel Visibility="{Binding Path=git.VisibleIfStatusIsGood}" Orientation="Horizontal">
                            <TextBlock Margin="0,0,3,0" Foreground="Green" Text="{Binding Path=git.Status.NbFilesAdded, FallbackValue=0}" />
                            <TextBlock Margin="0,0,3,0" Foreground="Green">files added, </TextBlock>
                            <TextBlock Margin="0,0,3,0" Foreground="Red" Text="{Binding Path=git.Status.NbFilesRemoved, FallbackValue=0}" />
                            <TextBlock Margin="0,0,3,0" Foreground="Red">files removed,</TextBlock>
                            <TextBlock Margin="0,0,3,0" Foreground="Orange" Text="{Binding Path=git.Status.NbFilesChanged, FallbackValue=0}" />
                            <TextBlock Margin="0,0,3,0" Foreground="Orange">files changed</TextBlock>
                        </StackPanel>
                        <TextBlock Visibility="{Binding Path=git.VisibleIfStatusHasError, FallbackValue=Collapsed}">error of merge conflict detected, please fix it manually</TextBlock>
                        <TextBlock Visibility="{Binding Path=git.VisibleIfEmpty, FallbackValue=Collapsed}">no git repo initialized</TextBlock>
                        <TextBlock Visibility="{Binding Path=git.VisibleIfNotInitialized, FallbackValue=Collapsed}">unknown</TextBlock>
                    </Grid>
                    <Button Margin="3,0,0,0" Click="RefreshRepoStatus">Refresh</Button>
                </StackPanel>
                <!-- TODO:
                * Update files.js
                * git add
                * Popup for commit title (pre-filled) and message (optionnal)
                * git commit
                * git push
                -->
                <Button>Push changes to Github</Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
